{
    "manifest_version": 3,
    "name": "Cypress Selector Generator",
    "version": "1.0",
    "description": "Select an element on the page and generate a Cypress selector.",
    "permissions": [
        "scripting",
        "clipboardWrite",
        "activeTab"
    ],
    "action": {
        "default_title": "Cypress Selector Generator",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/cy_insp1.png",
            "48": "icons/cy_insp2.png",
            "128": "icons/cy_insp3.png"
        }
    },
    "host_permissions": [
        "<all_urls>"
    ]
}